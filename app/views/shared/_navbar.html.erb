<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
  <div class="container">
    <!-- Brand -->
    <%= link_to root_path, class: "navbar-brand font-weight-bold text-primary" do %>
      <i class="fas fa-store mr-2"></i>Demu
    <% end %>

    <!-- Mobile Toggle Button -->
    <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navigation Links -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Products", products_path,
                      class: "nav-link font-weight-medium #{"text-primary font-weight-bold" if current_page?(products_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Categories", categories_path,
                      class: "nav-link font-weight-medium #{"text-primary font-weight-bold" if current_page?(categories_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path,
                      class: "nav-link font-weight-medium #{"text-primary font-weight-bold" if current_page?(about_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_path,
                      class: "nav-link font-weight-medium #{"text-primary font-weight-bold" if current_page?(users_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Admin", admin_root_path,
                      class: "nav-link font-weight-medium #{"text-primary font-weight-bold" if current_page?(admin_root_path)}" %>
        </li>
      </ul>

      <!-- User Authentication Links -->
      <ul class="navbar-nav ml-auto mr-3">
        <!-- Shopping Cart Icon -->
        <li class="nav-item">
          <%= link_to cart_path, class: "nav-link font-weight-medium position-relative" do %>
            <i class="fas fa-shopping-cart"></i>
            <% if @current_cart.total_items > 0 %>
              <span class="badge badge-danger badge-pill position-absolute" 
                    style="top: 0; right: 8px; font-size: 0.7rem;">
                <%= @current_cart.total_items %>
              </span>
            <% end %>
            <span class="d-none d-lg-inline ml-1">Cart</span>
          <% end %>
        </li>
        
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle font-weight-medium"
               href="#"
               id="userDropdown"
               role="button"
               data-toggle="dropdown"
               aria-haspopup="true"
               aria-expanded="false"
               onclick="toggleUserDropdown(event)">
              <i class="fas fa-user-circle mr-1"></i>
              <%= current_user.name.present? ? current_user.name : current_user.email %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown" id="userDropdownMenu">
              <%= link_to user_path(current_user), class: "dropdown-item" do %>
                <i class="fas fa-user mr-2"></i>Profile
              <% end %>
              <% if current_user.admin? %>
                <%= link_to admin_root_path, class: "dropdown-item" do %>
                  <i class="fas fa-cog mr-2"></i>Admin Panel
                <% end %>
                <div class="dropdown-divider"></div>
              <% end %>
              <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                <i class="fas fa-edit mr-2"></i>Edit Profile
              <% end %>
              <div class="dropdown-divider"></div>
              <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item border-0 bg-transparent text-left w-100", 
                  style: "padding: 0.25rem 1.5rem; text-decoration: none;", 
                  data: { confirm: "Are you sure you want to logout?" } do %>
                <i class="fas fa-sign-out-alt mr-2"></i>Logout
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link font-weight-medium" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link font-weight-medium" %>
          </li>
        <% end %>
      </ul>

      <!-- Search Form -->
      <%= form_tag products_path, method: :get, class: "form-inline ml-auto" do %>
        <div class="input-group">
          <%= select_tag :category_id,
                         options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
                         include_blank: "All Categories",
                         class: "custom-select rounded-left",
                         style: "max-width: 140px;" %>
          <%= text_field_tag :search, params[:search],
                             placeholder: "Search products...",
                             class: "form-control border-left-0",
                             style: "max-width: 200px;" %>
          <div class="input-group-append">
            <%= submit_tag "", class: "btn btn-primary", title: "Search", style: "border-radius: 0 0.25rem 0.25rem 0;" do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>

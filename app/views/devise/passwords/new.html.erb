<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-warning text-dark">
          <h2 class="mb-0">Forgot Your Password?</h2>
          <p class="mb-0 small">We'll send you a link to reset your password.</p>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-4">
              <%= f.label :email, class: "form-label" %>
              <span class="text-danger">*</span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email address", required: true %>
            </div>

            <div class="d-grid">
              <%= f.submit "Send Reset Instructions", class: "btn btn-warning btn-lg" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

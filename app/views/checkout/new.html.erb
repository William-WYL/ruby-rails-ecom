<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header bg-success text-white">
          <h2 class="mb-0">
            <i class="fas fa-credit-card mr-2"></i>Checkout
          </h2>
        </div>
        <div class="card-body">
          <%= form_with model: @order, url: checkout_path, method: :post, local: true do |f| %>
            <!-- Order Items Review -->
            <div class="mb-4">
              <h5 class="text-success mb-3">Order Review</h5>
              <% @cart_items.each do |item| %>
                <div class="row align-items-center border-bottom py-2">
                  <div class="col-md-2">
                    <% if item[:product].image.attached? %>
                      <%= image_tag item[:product].image.variant(resize_to_limit: [60, 60]), 
                          class: "img-fluid rounded" %>
                    <% else %>
                      <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                           style="height: 60px; width: 60px;">
                        <i class="fas fa-image text-muted"></i>
                      </div>
                    <% end %>
                  </div>
                  <div class="col-md-6">
                    <h6 class="mb-1"><%= item[:product].title %></h6>
                    <small class="text-muted">Quantity: <%= item[:quantity] %></small>
                  </div>
                  <div class="col-md-2 text-right">
                    <strong>$<%= '%.2f' % item[:product].price %></strong>
                  </div>
                  <div class="col-md-2 text-right">
                    <strong>$<%= '%.2f' % item[:subtotal] %></strong>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Shipping Address -->
            <div class="mb-4">
              <h5 class="text-success mb-3">Shipping Address</h5>
              <div class="bg-light p-3 rounded">
                <address class="mb-0">
                  <strong><%= current_user.name %></strong><br>
                  <%= current_user.address.street %><br>
                  <%= current_user.address.city %>, <%= current_user.address.province.code %> <%= current_user.address.postal_code %><br>
                  <strong>Province:</strong> <%= current_user.address.province.name %>
                </address>
                <small class="text-muted">
                  <%= link_to "Change address", edit_user_registration_path, class: "text-primary" %>
                </small>
              </div>
            </div>

            <!-- Payment Method (Placeholder) -->
            <div class="mb-4">
              <h5 class="text-success mb-3">Payment Method</h5>
              <div class="bg-light p-3 rounded">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="payment_method" id="payment_cash" value="cash" checked disabled>
                  <label class="form-check-label" for="payment_cash">
                    <i class="fas fa-money-bill-wave mr-2"></i>Cash on Delivery (Demo Mode)
                  </label>
                </div>
                <small class="text-muted">
                  Real payment processing will be implemented in future versions.
                </small>
              </div>
            </div>

            <!-- Terms and Conditions -->
            <div class="form-check mb-4">
              <input class="form-check-input" type="checkbox" id="terms" required>
              <label class="form-check-label" for="terms">
                I agree to the <a href="#" class="text-primary">Terms and Conditions</a> and <a href="#" class="text-primary">Privacy Policy</a>
              </label>
            </div>

            <div class="text-center">
              <%= f.submit "Place Order", class: "btn btn-success btn-lg px-5" %>
              <%= link_to "Back to Cart", cart_path, class: "btn btn-outline-secondary ml-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Order Summary -->
    <div class="col-lg-4">
      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0">Order Summary</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-2">
            <span>Subtotal:</span>
            <span>$<%= '%.2f' % @subtotal %></span>
          </div>
          
          <% tax_breakdown = current_user.address.province.tax_breakdown(@subtotal) %>
          <% if tax_breakdown[:gst] > 0 %>
            <div class="d-flex justify-content-between mb-2">
              <span>GST (<%= '%.1f' % (current_user.address.province.gst * 100) %>%):</span>
              <span>$<%= '%.2f' % tax_breakdown[:gst] %></span>
            </div>
          <% end %>
          
          <% if tax_breakdown[:pst] > 0 %>
            <div class="d-flex justify-content-between mb-2">
              <span>PST (<%= '%.2f' % (current_user.address.province.pst * 100) %>%):</span>
              <span>$<%= '%.2f' % tax_breakdown[:pst] %></span>
            </div>
          <% end %>
          
          <% if tax_breakdown[:hst] > 0 %>
            <div class="d-flex justify-content-between mb-2">
              <span>HST (<%= '%.1f' % (current_user.address.province.hst * 100) %>%):</span>
              <span>$<%= '%.2f' % tax_breakdown[:hst] %></span>
            </div>
          <% end %>
          
          <hr>
          <div class="d-flex justify-content-between mb-3">
            <strong>Total:</strong>
            <strong class="text-success">$<%= '%.2f' % @total %></strong>
          </div>
          
          <div class="text-center">
            <small class="text-muted">
              <i class="fas fa-shield-alt mr-1"></i>Secure Checkout
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<h1 class="mb-4">Products List</h1>

<div class="container px-4">
  <% if @products.any? %>
    <div class="row gx-4 gy-4 justify-content-start">

      <% @products.each do |product| %>
        <div class="col-auto" style="width: 260px;">
          <div class="card h-100 shadow-sm">

            <% if product.image_url.present? %>
              <%= link_to product_path(product) do %>
                <%= image_tag product.image_url, class: "card-img-top mx-auto d-block", alt: product.title,
                                                 style: "height: 180px; width: auto; object-fit: contain; padding: 10px;" %>
              <% end %>
            <% end %>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title">
                <%= link_to product.title, product_path(product), class: "text-decoration-none text-dark" %>
              </h5>
              <p class="card-text mt-auto fw-bold">$<%= sprintf("%.2f", product.price) %></p>
            </div>

          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center my-4">
      <%= paginate @products %>
    </div>
  <% else %>
    <p class="text-center fs-5 mt-5">No products found matching your search criteria.</p>
  <% end %>
</div>

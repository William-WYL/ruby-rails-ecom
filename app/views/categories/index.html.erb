<div class="container-fluid bg-white min-vh-100 py-5">
  <div class="container">

    <!-- Page Header -->
    <div class="row mb-5">
      <div class="col-12">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h1 class="display-4 font-weight-light text-dark mb-2">Categories List</h1>
          </div>
          <div class="text-right">
            <i class="fas fa-tags text-muted" style="font-size: 3rem;"></i>
          </div>
        </div>
        <div class="border-bottom border-primary mt-3" style="width: 60px; height: 3px;"></div>
      </div>
    </div>

    <!-- Categories List -->
    <div class="row">
      <div class="col-12">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4">
            <ul class="list-unstyled mb-0">
              <% @categories.each_with_index do |category, index| %>
                <li class="py-3 px-3 <%= "border-bottom" unless index == @categories.count - 1 %> category-item">
                  <div class="d-flex align-items-center">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mr-3"
                         style="width: 40px; height: 40px; font-size: 0.9rem;">
                      <i class="fas fa-tag"></i>
                    </div>
                    <%= link_to category.name, category_path(category), class: "text-decoration-none h5 mb-0 font-weight-medium text-dark category-link" %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<style>
  .category-item {
    transition: all 0.2s ease-in-out;
    border-radius: 8px;
  }

  .category-item:hover {
    background-color: #f8f9fa;
    transform: translateX(5px);
  }

  .category-link {
    transition: color 0.2s ease-in-out;
  }

  .category-link:hover {
    color: #007bff !important;
    text-decoration: none !important;
  }

  @media (max-width: 768px) {
    .display-4 {
      font-size: 2rem;
    }
  }
</style>
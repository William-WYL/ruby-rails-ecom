<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h2 class="card-title mb-0">
            <i class="fas fa-user"></i> User Profile
          </h2>
        </div>
        <div class="card-body">
          <!-- User Basic Information -->
          <div class="row mb-4">
            <div class="col-md-6">
              <h5><strong>Name:</strong></h5>
              <p class="text-muted"><%= @user.name.present? ? @user.name : "Name not provided" %></p>
            </div>
            <div class="col-md-6">
              <h5><strong>Email:</strong></h5>
              <p class="text-muted"><%= @user.email %></p>
            </div>
          </div>

          <div class="row mb-4">
            <div class="col-md-6">
              <h5><strong>Member Since:</strong></h5>
              <p class="text-muted"><%= @user.created_at.strftime("%B %d, %Y") %></p>
            </div>
            <div class="col-md-6">
              <h5><strong>Account Type:</strong></h5>
              <p class="text-muted">
                <% if @user.admin? %>
                  <span class="badge bg-danger">Administrator</span>
                <% else %>
                  <span class="badge bg-success">Customer</span>
                <% end %>
              </p>
            </div>
          </div>

          <!-- Address Section -->
          <div class="mb-4">
            <h5><strong>Address:</strong></h5>
            <% if @user.address.present? %>
              <div class="card bg-light">
                <div class="card-body">
                  <%= @user.address.street %><br>
                  <%= @user.address.city %>, <%= @user.address.province&.name || "Province not specified" %> <%= @user.address.postal_code %>
                </div>
              </div>
            <% else %>
              <p class="text-muted">No address on file</p>
            <% end %>
          </div>

          <!-- Orders Section -->
          <div class="mb-4">
            <h5><strong>Order History:</strong></h5>
            <% if @user.orders.any? %>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Order #</th>
                      <th>Date</th>
                      <th>Status</th>
                      <th>Total</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @user.orders.order(created_at: :desc).limit(5).each do |order| %>
                      <tr>
                        <td>#<%= order.id %></td>
                        <td><%= order.created_at.strftime("%m/%d/%Y") %></td>
                        <td>
                          <span class="badge bg-info"><%= order.status || "Pending" %></span>
                        </td>
                        <td>
                          <% if order.respond_to?(:total) %>
                            $<%= number_with_precision(order.total, precision: 2) %>
                          <% else %>
                            N/A
                          <% end %>
                        </td>
                        <td>
                          <%= link_to "View", order_path(order), class: "btn btn-sm btn-outline-primary" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <% if @user.orders.count > 5 %>
                  <p class="text-muted">Showing 5 most recent orders of <%= @user.orders.count %> total</p>
                <% end %>
              </div>
            <% else %>
              <p class="text-muted">No orders yet</p>
            <% end %>
          </div>

          <!-- Reviews Section -->
          <div class="mb-4">
            <h5><strong>Reviews:</strong></h5>
            <% if @user.reviews.any? %>
              <p class="text-success">
                <i class="fas fa-star"></i>
                <%= pluralize(@user.reviews.count, "review") %> written
              </p>
              <% @user.reviews.limit(3).each do |review| %>
                <div class="card mb-2">
                  <div class="card-body py-2">
                    <small class="text-muted">
                      <% if review.respond_to?(:product) && review.product %>
                        Review for: <%= review.product.name %>
                      <% end %>
                      - <%= review.created_at.strftime("%m/%d/%Y") %>
                    </small>
                    <% if review.respond_to?(:rating) %>
                      <div class="text-warning">
                        <% review.rating.times do %>★<% end %>
                        <% (5 - review.rating).times do %>☆<% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted">No reviews written yet</p>
            <% end %>
          </div>

          <!-- Action Buttons -->
          <div class="d-flex gap-2 mt-4">
            <% if current_user == @user %>
              <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
            <% end %>
            <% if current_user&.admin? %>
              <%= link_to "All Users", users_path, class: "btn btn-secondary" %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
